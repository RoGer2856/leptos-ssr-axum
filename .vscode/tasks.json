{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "leptos",
			"args": [
				"watch",
				"serve",
			],
			"options": {
				"env": {
					"RUST_LOG": "info"
				}
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}